<%# Partial for nested article fields - can be used with Stimulus nested-form controller %>
<div class="card mb-3 nested-form-item">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <h5 class="card-title mb-0">Article</h5>
      <button type="button"
              class="btn btn-sm btn-outline-danger"
              data-action="nested-form#remove">
        âœ• Supprimer
      </button>
    </div>

    <%= f.hidden_field :id %>
    <%= f.hidden_field :_destroy %>

    <%= f.input :title, label: "Titre de l'article", placeholder: "Titre de l'article", wrapper: :floating_labels_form %>
    <%= f.input :content, label: "Contenu", as: :text, input_html: { rows: 3 }, placeholder: "Contenu", wrapper: :floating_labels_form %>
  </div>
</div>
